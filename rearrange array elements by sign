class Solution {
    public int[] rearrangeArray(int[] nums) {
        int n[] = new int[nums.length];
        int a = 0 , b = 1;
        for(int i = 0 ; i<nums.length ;i++ ){
            
            if(nums[i]>0){
                n[a]=nums[i];
                a+= 2;}
             

            else{
            n[b]=nums[i];
            b+=2;
          
            }
            
         
        }

        return n;
    }
}
