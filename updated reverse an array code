/*  
here we have used the two pointer approach / reversal algorithm 

1) reverse entire array
2) reverse the first k element
3) reverse the remaining n-k elements  

time - o(n)
space - o(1)

*/


class Solution {
    public void rotate(int[] nums, int k) {
     
         k=k%nums.length;
      rev(nums,0,nums.length-1);
      rev(nums,0,k-1);
      rev(nums,k,nums.length-1);
    }

      static void rev (int nums [] , int start , int end ){
        int temp = 0;
        while(start<=end){
            temp = nums[start];
            nums[start] = nums[end];
            nums[end] = temp;
            start ++;
            end--;
        }
      }
    
}
