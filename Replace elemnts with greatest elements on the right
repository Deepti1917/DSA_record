class Solution {
    public int[] replaceElements(int[] arr) {
        int max_el = -1;
         
        for(int i = arr.length-1; i >=0;i--){
          
          int cur_val = arr[i];

          arr[i]= max_el;
          max_el=Math.max(max_el,cur_val);


          
        }
        return arr;
    }
}
